# Start with a lightweight Node.js image
FROM node:alpine

# Set the working directory inside the container
WORKDIR /app

# Copy only the package.json first to cache dependencies
COPY package.json ./ 

# Install dependencies
RUN npm install

# Copy all the application files
COPY . .

# Build the React app for production
RUN npm run build

# Install a lightweight server to serve static files
RUN npm install -g serve

# Command to start the server and serve the built files
CMD ["serve", "-s", "build", "-l", "3000"]

# Expose the React app port
EXPOSE 3000

